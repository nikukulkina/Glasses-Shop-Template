.select
	position relative
	display flex
	width 140px
	font-size 13px
	color $text-blue
	background-color transparent
	&_mobile
		width 55px

	&__wrap
		position relative
		display inline-block

	&__name
		margin-right 7px
		line-height 18px

	&__field
		position relative
		text-align left
		color #ffffff
	
		&::after
			position absolute
			top 50%
			right -20px
			display block
			width 12px
			height 8px
			cursor pointer
			content ''
			transform translateY(-50%)
			transform-origin 50% 50%
			background-color transparent
			background-image url(/assets/images/arrow.png)
			background-position center
			transition transform .3s ease-in
		
		&_active
			&::after
				transform translateY(-50%) rotate(180deg)

	&__menu
		z-index 9
		left 0
		display none
		overflow hidden
		overflow-y auto
		width 100%
		max-height 144px

	&__menu-item
		transition background-color .3s ease-in
		&:hover
			background-color rgba(0, 0, 0, .1)
	&__menu-button
		color #ffffff
		transition color .3s ease-in
		&:hover
			text-decoration underline
			color $text-blue



