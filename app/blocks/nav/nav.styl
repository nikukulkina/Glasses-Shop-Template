.nav
	display flex
	align-items center
	font-weight 600
	text-transform uppercase

	&__list
		display flex
		justify-content space-between

	&__item
		padding 0 10px

	&__link
		text-decoration none
		letter-spacing -.5px
		color $text-gray
		border-bottom 1px solid transparent
		transition color, border-bottom-color .3s ease-in

		&:hover
			color $blue
			border-bottom-color $blue

	@media(max-width 600px)
			&__item
				padding 0 5px

	@media(max-width 600px)
		display none