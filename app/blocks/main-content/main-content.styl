.main-content
	display flex
	flex-flow column
	max-width 690px
	&__title
		margin-bottom 15px
		text-transform uppercase
		font-size 22px
		letter-spacing -1px
		color #635f57
	&__featured-products
		margin-bottom 20px
		display flex
		flex-wrap wrap
		justify-content space-between
	@media(max-width 950px)
		&__featured-products
			width 80%
		&__main-products,
		&__staff-pick,
		&__new
			display flex
			flex-flow column
			align-items center
	@media(max-width 780px)
		&__featured-products
			width 90%
			justify-content space-between
	@media(max-width 730px)
		&__featured-products
			width 100%
	@media(max-width 659px)
		&__featured-products
			width 80%
	@media(max-width 580px)
		&__featured-products
			width 100%
	@media(max-width 480px)
		&__featured-products
			flex-flow column
			align-items center
			justify-content flex-start
	
