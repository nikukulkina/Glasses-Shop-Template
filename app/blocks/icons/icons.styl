.icons
	display flex
	&__icon
		position relative
		margin-right 5px
		width 37px
		height 37px
		font-size 20px
		color $blue
		background-color #ffffff
		border-radius 50%
		transition .3s ease-in
		&:last-child
			margin-right 0
		&:before
			position absolute
			top 50%
			left 50%
			font-family 'icomoon'
			content ''
			transform translate(-50%, -50%)
		&_gp
			&:before
				content '\f0d5'
		&_in
			&:before
				content '\f0e1'
		&_rss
			&:before
				content '\f09e'
		&_fb
			&:before
				content '\f09a'
		&:hover
			color #ffffff
			background-color $green
