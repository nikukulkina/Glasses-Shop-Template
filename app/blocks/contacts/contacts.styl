.contacts
	display flex
	flex-flow column
	&__title
		margin-bottom 25px
		text-transform uppercase
		font-size 20px
		color #ffffff
	&__list
		margin-bottom 10px
		padding-bottom 5px
		border-bottom 1px solid $light-blue
	&__item
		line-height 24px
		color #ffffff
	&__link
		text-decoration none
		color #ffffff
		transition .3s ease-in
		&:hover
			text-decoration underline
			color $text-blue
	@media(max-width 900px)
		width 40%
	@media(max-width 560px)
		width 90%
