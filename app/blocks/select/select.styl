.select
	position relative
	width 170px
	color #ffffff
	background-color transparent
	&__wrap
		position relative
		display inline-block

	&__name
		margin-right 7px

	&__field
		position relative
		width 70px
		text-align left
	
		&::after
			position absolute
			top 50%
			right 0
			display block
			width 12px
			height 8px
			cursor pointer
			content ''
			transform translateY(-50%)
			transform-origin 50% 50%
			background-color transparent
			background-image url(/assets/images/arrow.png)
			background-position center
			transition transform .3s ease-in
		
		&_active
			&::after
				transform translateY(-50%) rotate(180deg)

	&__menu
		z-index 9
		left 0
		display none
		overflow hidden
		overflow-y auto
		width 100%
		max-height 144px


	&__menu-item
		transition background-color .3s ease-in
		&:hover
			background-color rgba(0, 0, 0, .1)



