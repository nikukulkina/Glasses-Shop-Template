.facebook
	width 25%

	&__title
		margin-bottom 25px
		text-transform uppercase
		font-size 20px
		color #ffffff

	&__members
		margin-top 10px
		margin-bottom 5px
		color #ffffff

	&__plugin-link
		font-size 13px
		text-decoration none
		color #ffffff
		transition color .3s ease-in

		&:hover
			text-decoration underline
			color $text-blue

	@media(max-width 900px)
		margin-bottom 20px
		width 40%

	@media(max-width 560px)
		width 90%