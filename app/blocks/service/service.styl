.service
	display flex
	align-items center
	&__image
		position relative
		margin-right 5px
		width 66px
		height 66px
		font-size 35px
		color $blue
		background-color #ffffff
		border-radius 50%
		&:before
			position absolute
			top 50%
			left 50%
			font-family 'icomoon'
			content '\f0d1'
			transform translate(-50%, -50%)
	&__link
		font-size 21px
		text-decoration none
		color #ffffff
		text-transform uppercase
		transition color .3s ease-in
		&:hover
			text-decoration underline
			color $text-blue
	&_call
		.service__image
			&:before
				content '\f095'
	@media(max-width 950px)
		&__image
			width 50px
			height 50px
			font-size 25px
		&__link
			font-size 18px
	@media(max-width 820px)
		&_call
			.service__image
				margin-right 0
				margin-left 5px
				order 2
	@media(max-width 460px)
		&__link
			font-size 14px
	@media(max-width 380px)
		&__image
			width 40px
			height 40px
			font-size 25px
		&__link
			font-size 13px
	