.header-content
	margin 40px 0
	display flex
	justify-content space-between
	align-items center
	&__action
		display flex
		align-items center

	&__main
		display flex
		width 57%
		justify-content space-between
	&__bookmarks
		position relative
		margin 0 3px
		display block
		width 37px
		height 37px
		font-size 17px
		font-weight normal
		text-decoration none
		color #ffffff
		background-color $green
		border-radius 50%
		transition background-color .3s ease-in
		&:before
			position absolute
			top 50%
			left 50%
			font-family 'icomoon'
			content '\f02c'
			transform translate(-50%, -50%)
		&:hover
			background-color $blue

	@media(max-width 900px)
		flex-wrap wrap
		&__main
			padding-bottom 15px
			width 100%
	@media(max-width 550px)
		margin 15px 0
	@media(max-width 400px)
		&__bookmarks
			width 34px
			height 34px
			font-size 15px
	
