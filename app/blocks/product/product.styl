.product
	position relative
	margin-bottom 20px
	padding 8px
	overflow hidden
	width 220px
	height 320px
	box-shadow 0 1px 5px 0 #E0E0E0
	&__ribbon
		position absolute
		z-index 5
		top 0
		right 0
		padding 5px
		transform-origin top left
		transform translateX(30%) translateY(0%) rotate(45deg)
		color #ffffff
		background-color $blue
		&:before,
		&:after
			position absolute
			top 0
			margin 0 -1px
			width 100%
			height 100%
			content ''
			background-color $blue
		&:before
			right 100%
		&:after
			left 100%
		&_sale
			left 0
			width fit-content
			transform-origin top right
			transform translateX(-30%) translateY(0%) rotate(-45deg)
			background-color $green
			&:before,
			&:after
				background-color $green
	&__wrap
		display flex
		justify-content center
		align-items center
		height 230px
		background-color #eff1f0
	&__image
		transition .3s ease-in
		&:hover
			transform scale(1.1)
	&__details
		position relative
		margin 15px 0
		padding-right 47px
		cursor pointer
		&:before
			position absolute
			top 50%
			right 0
			display flex
			justify-content center
			align-items center
			width 47px
			height 47px
			font-family 'icomoon'
			font-size 25px
			content '\f291'
			color #ffffff
			background-color $green
			border-radius 50%
			transform translateY(-50%)
		&:hover
			text-decoration underline
	&__name
		font-size 14px
		line-height 22px
		color #464148
	&__price
		font-size 18px
		line-height 22px
		color $green
	@media(max-width 950px)
		width 200px
		height 290px
		&__wrap
			height 190px
		&__details
			margin 10px 0

